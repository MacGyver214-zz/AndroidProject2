<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.ehar.accelerometercs450.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accelerometer_values"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/accel_title"
            android:paddingBottom="@dimen/default_padding"/>

        <LinearLayout
            style="@style/default_layout">

            <TextView
                style="@style/accel_view"
                android:id="@+id/x_accel_view"
                />

            <TextView
                style="@style/label"
                android:text="@string/x"
                />

        </LinearLayout>

        <LinearLayout
            style="@style/default_layout">

            <TextView
                style="@style/accel_view"
                android:id="@+id/y_accel_view"
                />

            <TextView
                style="@style/label"
                android:text="@string/y"/>

        </LinearLayout>

        <LinearLayout
            style="@style/default_layout">

            <TextView
                style="@style/accel_view"
                android:id="@+id/z_accel_view"
                />

            <TextView
                style="@style/label"
                android:text="@string/z"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="16">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/geographical_values"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/accel_title"
            android:paddingBottom="@dimen/default_padding"/>

        <LinearLayout
            style="@style/default_layout">

            <TextView
                style="@style/accel_view"
                android:id="@+id/latitude_view"/>

            <TextView
                style="@style/label"
                android:text="@string/latitude"/>

        </LinearLayout>

        <LinearLayout
            style="@style/default_layout">

            <TextView
                style="@style/accel_view"
                android:id="@+id/longitude_view"/>

            <TextView
                style="@style/label"
                android:text="@string/longitude"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
